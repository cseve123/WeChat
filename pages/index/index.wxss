.banner {
  width: 100%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.nav {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.navItem .iconfont {
  margin: 20rpx 0;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  text-align: center;
  background-color: rgb(240, 19, 19);
  color: #fff;
  font-size: 50rpx;
}

.navItem text {
  font-size: 26rpx;
}

.recommend {
  padding: 20rpx;
}

.recommend-scroll {
  display: flex;
  height: 300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  /* 单行溢出 */
  /* display: block;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis; */
  /* 多行溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


.top {
  padding: 20rpx;
}
.topList {
  height: 400rpx;
}
.swiperItem {
  width: 96%;
  background-color: #fbfbfb;
}
.topItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem {
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}